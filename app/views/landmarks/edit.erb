<h2>Edit Historical Landmark</h2>

<!-- add content here -->

<form action="/landmarks/<%=@landmark.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name:<input type="text" name="landmark[name]" id="name" value="<%=@landmark.name%>">
  Year: <input type="text" name="landmark[year_completed]" id="year_completed" value="<%=@landmark.year_completed.to_s%>">
  <br></br>
  <label>Choose an existing Title:</label>
  <br></br>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <%end%>

  <br></br>

  <h4>Create New Title:</h4>
    Title Name: <input type="text" id="new_title" name="title[name]"> <br><br>

     <h4>Create New Figure:</h4>
    Figure Name: <input type="text" id="new_figure" name="figure[name]">
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
